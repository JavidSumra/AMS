<% if(messages && messages.error && messages.error.length != 0) { %>
<div
  style="
    background-color: #fee2e2;
    border-color: #f87171;
    color: #ef4444;
    border-radius: 3px;
    position: relative;
    padding: 10px;
    text-align: center;
    margin-bottom: 20px;
    font-size: large;
  "
  role="alert"
>
  <strong> <%=messages.error %> </strong>
</div>
<% } %> <% if(messages && messages.success && messages.success.length != 0) { %>
<div
  style="
    background-color: #ecfccb;
    border-color: #a3e635;
    color: #84cc16;
    border-radius: 3px;
    font-size: large;
    position: relative;
    padding: 10px;
    text-align: center;
    margin-bottom: 20px;
  "
  role="alert"
>
  <strong> <%=messages.success %> </strong>
</div>
<% } %>
